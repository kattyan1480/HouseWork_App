<h1>家事登録</h1>

<%= form_with model: @chore, local: true do |f| %>

  <div>
    <%= f.label :name, "家事名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :detail, "家事の詳細" %><br>
    <%= f.text_area :detail, rows: 4 %>
  </div>

  <div>
    <%= f.label :cake_reward, "ショートケーキ獲得数" %><br>
    <%= f.number_field :cake_reward, min: 1 %>
  </div>

<div>
  <label>実行日（複数選択）</label><br>
<%= f.text_field :execute_dates, id: "execute_dates" %>
</div>

  <div>
    <label>実行時間</label><br>
    <input type="time"
           name="chore[execute_time]"
           step="900">
  </div>

  <%= f.submit "登録" %>

<% end %>


